.device-list {
  overflow: hidden;
  height: 500rpx;
  min-height: 500rpx;
  display: flex;
  flex-grow: 1;
}

.device-list-item {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
  padding: 30rpx 0;
  margin-left: 0rpx;
  margin-right: 0rpx;
}

.cell-hover {
  opacity: 0.7;
  background-color: #E6E6E6;
  border-radius: 5rpx;
}

.itemClass{
  width: 100%;
  height: 100%;
}